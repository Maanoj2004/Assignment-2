#include <stdio.h>

void descending_sort(int arr[], int n);

int main() {
    int n;
    printf("Enter the value of N: ");
    scanf("%d", &n);
    
    int arr[n];
    printf("Enter the numbers:\n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    descending_sort(arr, n);
    
    printf("The numbers arranged in descending order are given below:\n");
    for(int i = 0; i < n; i++) {
        printf("%d\n", arr[i]);
    }
    
    return 0;
}

void descending_sort(int arr[], int n) {
    int temp;
    for(int i = 0; i < n; i++) {
        for(int j = i + 1; j < n; j++) {
            if(arr[i] < arr[j]) {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}
